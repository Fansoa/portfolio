import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Javascript', 'Typescript', 'Php']
const frontend = ['HTML', 'CSS', 'SASS', 'React', 'Nextjs', 'Remix', 'Redwood']
const backend = ['Node', 'Express']
const others = ['Github', 'Gitlab', 'Agile','Figma', 'SQL', 'noSQL', 'graphQL', 'Docker']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
